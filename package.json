{
  "private": true,
  "name": "bookstop-home",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "format": "prettier ./src -w",
    "tw:watch": "npx tailwindcss -i ./src/input.css -o ./src/styles.css --watch",
    "tw": "npx tailwindcss -i ./src/input.css -o ./src/styles.css",
    "build": "npm run tw && preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "plugins": [
      "tailwindcss"
    ],
    "extends": [
      "preact",
      "plugin:tailwindcss/recommended"
    ],
    "settings": {
      "jest": {
        "version": 27
      }
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^7.17.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-tailwindcss": "^3.4.3",
    "preact-cli": "^3.3.4",
    "prettier": "^2.5.1",
    "sirv-cli": "^2.0.2",
    "tailwindcss": "^3.0.18"
  },
  "dependencies": {
    "preact": "^10.6.5",
    "preact-render-to-string": "^5.1.19"
  }
}
